<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab04.MainActivity">


    <Switch
        android:text="On/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/onOffSwitch1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Freq" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Freq"
        android:layout_marginTop="21dp"
        android:text="FREQ VALUE"
        android:layout_below="@+id/onOffSwitch1"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Freq"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:id="@+id/slider1"
        android:layout_alignParentEnd="true"
        android:max="100" />

    <Switch
        android:text="Play/Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider1"
        android:layout_alignEnd="@+id/Freq"
        android:layout_marginTop="28dp"
        android:id="@+id/onOffSwitch2" />

    <TextView
        android:text="VOLUME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Vol"
        android:layout_below="@+id/slider2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/slider2"
        android:max="100"
        android:layout_below="@+id/onOffSwitch2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
